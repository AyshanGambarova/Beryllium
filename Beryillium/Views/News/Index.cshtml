@model List<News>
<div class="gtco-section">
    <div class="gtco-container">
        <div class="row gtco-heading">
            <div class="col-md-7 text-left">
                <h2>News</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 gtco-news">
                <ul>
                    @foreach (News item in Model)
                    {
                        <li>
                            <a href="">
                                <span class="post-date">@item.Date</span>
                                <h3>@item.Title</h3>
                                <p>@item.Text</p>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>